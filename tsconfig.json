{
  "include": ["src", "types"],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "declarationDir": "dist/types",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "esModuleInterop": true
  }
}
